@model IEnumerable<Product>

<div class="text-center">
  <div class="display-6">Products</div>
  <div class="d-flex justify-content-end">
    <a class="btn btn-outline-success" asp-action="Create">
      <i class="fa fa-plus"></i>
      Create</a>
  </div>

  <table class="table table-striped table-hover mt-5">
    <thead class="table-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Product Name</th>
        <th scope="col">Price</th>
        <th scope="col">Operations</th>
        <th scope="col">View Product</th>
      </tr>
    </thead>
    <tbody>
      @foreach (Product product in Model)
      {
        <tr>
          <td>@product.ProductId</td>
          <td>@product.ProductName</td>
          <td>@product.Price.ToString("c")</td>
          <td>
            <div class="btn-group">
              <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@product.ProductId">
                <i class="fa fa-edit"></i>
                Update</a>
              <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@product.ProductId">
              <i class="fa fa-trash"></i>
              Delete</a>
            </div>
          </td>
          <td>
            <a class="btn btn-outline-primary" target="_blank" asp-area="" asp-controller="Product" asp-action="Get"
              asp-route-id="@product.ProductId">
              <i class="fa fa-eye"></i>
              View</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>
